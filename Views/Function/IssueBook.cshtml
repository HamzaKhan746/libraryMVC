@using System.Data
@using System.Data.SqlClient
@model System.Data.DataTable
@{
    ViewData["Title"] = "Issue Book";
   Layout = "~/Views/Shared/Libdashboard.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width">
	    <link rel="stylesheet" type="text/css" href="~/css/issue.css" asp-append-version="true">
</head>
<body>
    <div class="issu_form" >
                    <h2>ISSUE BOOK</h2>
                    <form class="enterb" method="post" action="@Url.Action("SearchMember","Function")">
                <label for="bname">Enter Member Id </label><br><br>
                <input type="text" name="txtmid" id="bname" class="text" placeholder="Enter id of member you want to issue book"><br><br>
                        <input type="submit" value="SEARCH" style="width:130px;  height:29px; border:None; margin-left:100px; background-color:darkblue; color:white; font-size: 0.8em;">
                    </form>
                     @{
            if (@ViewBag.flag == 1)
            {
                if (Model.Rows.Count > 0)
                   {
                        <form class="issu" method="post" action="@Url.Action("IssueBookinsert","Function")">
                        <table class="is">
                            <tr>
                                <td> <label for="mname">Member Name</label></td>
                                <td><input type="text" name="txtname" value="@Model.Rows[0]["firstname"]" id="mname"></td>
                            </tr>
                            <tr>
                               <td><label for="memail">Member Email</label></td> 
                               <td><input type="text" name="txtemail" value="@Model.Rows[0]["email"]" id="memail"></td>
                            </tr>
                            <tr>
                                <td><label for="contact">Member Contact</label></td>
                                <td><input type="text" name="txtcontact" value="@Model.Rows[0]["contact"]" id="contact"></td>
                            </tr>
                            <tr>
                                <td><label for="bname">Book Id</label></td>
                                <td><input type="text" name="txtbookid" id="pbname"></td>
                            </tr>
                            <tr>
                                <td> <label for="idate">Issue Date</label></td>
                                <td><input type="text" value="@ViewBag.Issuedate" name="txtidate" id="idate"></td>
                            </tr>
                            <tr>
                                <td> <label for="rdate">Return Date</label></td>
                                <td><input type="text" name="txtrdate" value="@ViewBag.Returndate" id="rdate"></td>
                            </tr>
                            </table> 
                            <input type="submit" value="ISSUE BOOK" class="btn"> </form>
                        }
                        else
                    {
                       <script type="text/javascript">
                alert("Invalid Member id, Enter again");
                      </script>
                    }
                        }}
                        </div>
</body>
</html>
